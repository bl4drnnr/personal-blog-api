{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@shared/*": ["src/shared/services/*", "src/shared/*"],
      "@models/*": ["src/models/*"],
      "@pipes/*": ["src/pipes/*"],
      "@exceptions/*": [
        "src/exceptions/*",
        "src/exceptions/user/*",
        "src/exceptions/auth/*",
        "src/exceptions/security/*",
        "src/exceptions/validation/*",
        "src/exceptions/articles/*",
        "src/exceptions/newsletters/*",
        "src/exceptions/projects/*",
        "src/exceptions/site-config/*",
        "src/exceptions/pages/*"
      ],
      "@dto/*": [
        "src/dto/*",
        "src/dto/user/requests/*",
        "src/dto/user/responses/*",
        "src/dto/security/requests/*",
        "src/dto/security/responses/*",
        "src/dto/articles/requests/*",
        "src/dto/articles/response/*",
        "src/dto/auth/responses/*",
        "src/dto/newsletters/requests/*",
        "src/dto/newsletters/responses/*",
        "src/dto/contact/requests/*",
        "src/dto/contact/responses/*",
        "src/dto/projects/requests/*",
        "src/dto/site-config/requests/*",
        "src/dto/site-config/responses/*",
        "src/dto/pages/requests/*",
        "src/dto/pages/responses/*"
      ],
      "@events/*": ["src/events/*"],
      "@guards/*": ["src/guards/*"],
      "@decorators/*": ["src/decorators/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@modules/*": [
        "src/modules/*",
        "src/modules/users/*",
        "src/modules/auth/*",
        "src/modules/security/*",
        "src/modules/articles/*",
        "src/modules/newsletters/*",
        "src/modules/contact/*",
        "src/modules/projects/*",
        "src/modules/site-config/*",
        "src/modules/control/*",
        "src/modules/pages/*"
      ],
      "@interfaces/*": [
        "src/libs/enums/*",
        "src/libs/interfaces/auth/*",
        "src/libs/interfaces/email/*",
        "src/libs/interfaces/email/common/*",
        "src/libs/interfaces/email/subscription/*",
        "src/libs/interfaces/security/*",
        "src/libs/interfaces/users/*",
        "src/libs/interfaces/cryptography/*",
        "src/libs/interfaces/time/*",
        "src/libs/interfaces/articles/*",
        "src/libs/interfaces/newsletters/*",
        "src/libs/interfaces/contact/*",
        "src/libs/interfaces/projects/*",
        "src/libs/interfaces/pages/*"
      ],
      "@docs/*": ["src/libs/docs/*"],
      "@email-templates/*": [
        "src/libs/email-templates/*",
        "src/libs/email-templates/contact/*",
        "src/libs/email-templates/subscription/*"
      ],
      "@interceptors/*": ["src/interceptors/*"],
      "@regex/*": ["src/libs/regex/*"]
    }
  }
}
